.intro
    background-color #fafafa
    border 1px solid #e7e7e7
    -webkit-box-shadow inset 0 2px 0 rgba(0, 0, 0, 0.05)
    box-shadow inset 0 2px 0 rgba(0, 0, 0, 0.05)
    color inherit
    margin 10px auto
    padding 20px 30px

.intro > h3
    display inline-block
    line-height 64px
    margin 0 10px
    vertical-align top

.webpack-logo
    background-image url('../img/webpack.png')
    background-size contain
    display inline-block
    height 64px
    width 64px

.checkbox
    float left
    margin 0

.btn-remove
    float right

.complete
    background-color #eee
    text-decoration line-through
    .close > span
        color #666

button.close
    outline none

button.close, button.close:hover
    color #666

.todo-input-container
    margin 1em auto

.todo-list
    margin-bottom 0

.todo-item-container
    .todo-item
        display block
    .edit-todo-item
        display none
    &.edit
        border none
        padding 0
        .todo-item
            display none
        .edit-todo-item
            display table

.edit-todo-item
    .form-control
        border-top none

.nav
    > li
        > a.active,
        > a.active:hover,
        > a.active:focus
            color #ffffff
            background-color #158cba
        > a.active > .badge
            color #158cba
            background-color #ffffff
